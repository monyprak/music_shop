= form_for(@product) do |f|
  .field
    = f.label :name
    = f.text_field :name
    %br
    = f.label :price
    = f.text_field :price
    %br
    = f.label :description
    = f.text_field :description
    %br
    = f.label :path_img
    = f.text_field :path_img
    %br
    = f.label :top_product
    = f.check_box :top_product
    %br
    = f.label "Category Name"
    = f.select "category_id", options_from_collection_for_select(@categories, "id", "name"), prompt: "Please select category"
    %br
    = f.label "Brand Name"
    = f.select "brand_id", options_from_collection_for_select(@brands, "id", "name"), prompt: "Please Select brand"
    %br
    = f.submit "Save" , class: "btn btn-success"
    = link_to 'Cancel' , products_path() , class: "btn"   