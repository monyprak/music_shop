= form_for(@brand) do |f|
  .field
    .span3
      // For imag
    
    .span9.pull-right  
      = f.label :name
      = f.text_field :name
    
      = f.label :description
      = f.text_field :description

      = f.label :photo
      = f.file_field :photo

    .span12.footer-form   
      = f.submit "Save" , class: "btn btn-success"
      = link_to 'Cancel' , brands_path() , class: "btn"